<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.admin.dao.MainCostCenterOrgRelDAO">
    <resultMap id="result" type="mainCostCenterOrgRelModel">
        <result property="org" column="org"/>
        <result property="costCenter" column="cost_center"/>
        <result property="totalRowCount" column="totalRowCount"/>
        
    </resultMap>
    
    <insert
		id="add"
		parameterType="mainCostCenterOrgRelModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="user"
		useGeneratedKeys="true"
		>
	    insert into pb2_ext_costcenter_org_rel(org, cost_center)
    	values (#{org},#{costCenter})
		
	</insert>
	
	<select id="count"  resultType="long">
        select
		    count(1)
		from
		    pb2_ext_costcenter_org_rel
	
    </select>
	
	<delete id="delete"
    		parameterType="mainCostCenterOrgRelModel"
			flushCache="true"
			statementType="PREPARED"
			>
   		delete from pb2_ext_costcenter_org_rel where org=#{org} and cost_center=#{costCenter} 
	</delete>
	
</mapper>
