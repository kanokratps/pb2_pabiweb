<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.pcm.dao.PcmReqDtlDAO">
    <resultMap id="result" type="pcmReqDtlModel">
        <result property="id" column="id"/>
        <result property="masterId" column="master_id"/>
        <result property="description" column="description"/>
        <result property="amount" column="amount"/>
        <result property="currency" column="currency"/>
        <result property="createdTime" column="created_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="updatedBy" column="updated_by"/>
    </resultMap>
    
    <select id="list" resultMap="result" parameterType="map">
    
        SELECT
		    *, COUNT(*) OVER() totalRowCount
		FROM
		    pb2_pcm_req_dtl
		WHERE
			1=1
		<if test="masterId != null">
		AND 
			master_id=#{masterId}
		</if>			
		<if test="desc != null">
		AND 
			description=#{desc}
		</if>			
		ORDER BY field_name
		
    </select>
    
    <insert
		id="add"
		parameterType="pcmReqDtlModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="id"
		useGeneratedKeys="true"
		>
	    INSERT INTO pb2_pcm_req_dtl(
	    	master_id
	    	,description
	    	,amount
	    	,currency
	    	,created_by,updated_by
	    )VALUES( 
    		#{masterId}
    		,#{desc}
    		,#{amt}
    		,#{cur}
    		,#{createdBy},#{updatedBy}
    	)
		
	</insert>
	
	<select id="count"  resultType="long">
        SELECT
		    count(1)
		FROM
		    pb2_pcm_req_dtl
	
    </select>
	
	<delete id="delete"
    		parameterType="long"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_pcm_req_dtl WHERE id=#{id}
	</delete>
	
	<delete id="deleteByMasterId"
    		parameterType="string"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_pcm_req_dtl WHERE master_id=#{masterId}
	</delete>
	
    <select id="get" parameterType="long" resultMap="result">
        SELECT
		    *
		FROM
		    pb2_pcm_req_dtl
		WHERE id=#{id}
    </select>
    
</mapper>