<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pb.repo.pcm.dao.PcmOrdDAO">
    <resultMap id="result" type="pcmOrdModel">
        <result property="id" column="id"/>
        <result property="refId" column="ref_id"/>
        <result property="reqType" column="req_type"/>
        <result property="purType" column="pur_type"/>
        <result property="domestic" column="domestic"/>
        <result property="currency" column="currency"/>
        <result property="currencyRate" column="currency_rate"/>
        <result property="objective" column="objective"/>
        <result property="reason" column="reason"/>
        <result property="reqOu" column="req_ou"/>
        <result property="stockOu" column="stock_ou"/>
        <result property="needDate" column="need_date"/>
        <result property="workflowId" column="workflow_id"/>
        <result property="workflowInsId" column="workflow_ins_id"/>
        <result property="docRef" column="doc_ref"/>
        <result property="folderRef" column="folder_ref"/>
        <result property="waitingLevel" column="waiting_level"/>
        <result property="requestedTime" column="requested_time"/>
        <result property="createdTime" column="created_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="wfStatus" column="wf_status"/>
        <result property="rewarning" column="rewarning"/>
        <result property="waitingDay" column="waiting_day"/>
    </resultMap>
    
    <select id="list" resultMap="result" parameterType="map">
        SELECT
		    *,
  			CASE 
  				WHEN STATUS='D' THEN '1'
            	WHEN STATUS='W' THEN '2'
            	WHEN STATUS='C' THEN '3'
            	WHEN STATUS='X' THEN '4'
            	ELSE STATUS
       		END ORDER_FIELD,		    
		    COUNT(*) OVER() totalRowCount
		FROM
		    pb2_pcm_ord
		ORDER BY ${orderBy}
		LIMIT #{limit}
		OFFSET #{start}
    </select>
    
    <insert
		id="add"
		parameterType="pcmOrdModel"
		flushCache="true"
		statementType="PREPARED"
		keyProperty="id"
		useGeneratedKeys="true"
		>
	    INSERT INTO pb2_pcm_ord(
	    	id
	    	,ref_id
	    	,req_type,pur_type
	    	,domestic
	    	,currency,currency_rate
	    	,objective,reason
	    	,req_ou,stock_ou
	    	,need_date
	    	,total,remark
	    	,doc_ref,folder_ref
	    	,waiting_level,status
	    	,workflow_id
	    	,requested_time
	    	,created_by,updated_by
	    ) VALUES (
	    	#{id}
	    	,#{refId}
	    	,#{reqType},#{purType}
	    	,#{domestic}
	    	,#{currency},#{currencyRate}
	    	,#{objective},#{reason}
	    	,#{reqOu},#{stockOu}
	    	,#{needDate}
    		,#{total},#{remark}
    		,#{docRef},#{folderRef}
    		,#{waitingLevel},#{status}
    		,#{workflowId}
    		,#{requestedTime}
    		,#{createdBy},#{updatedBy}
    	)
		
	</insert>
	
	<select id="count"  resultType="long">
        SELECT
		    count(1)
		FROM
		    pb2_pcm_ord
	
    </select>
	
	<delete id="delete"
    		parameterType="string"
			flushCache="true"
			statementType="PREPARED"
			>
   		DELETE FROM pb2_pcm_ord WHERE id=#{id}
	</delete>
	
	<update id="update" 
        parameterType="pcmOrdModel"
		flushCache="true">
     UPDATE pb2_pcm_ord 
     SET remark=#{remark}
		<if test="status != null">
     		,status=#{status}
		</if>			
     	,workflow_id=#{workflowId}
     	,workflow_ins_id=#{workflowInsId}
     	,requested_time=#{requestedTime}
     	,doc_ref=#{docRef}
     	,folder_ref=#{folderRef}
	    ,waiting_level=#{waitingLevel}
        ,updated_by=#{updatedBy}
        ,updated_time=Now()
     WHERE id=#{id}
    </update>
    
    <select id="get" parameterType="string" resultMap="result">
        SELECT
		    *
		FROM
		    pb2_pcm_ord
		WHERE id=#{id}
    </select>
    
    <select id="genNewId" parameterType="map" resultType="string">
    	SELECT CONCAT(field2,TO_CHAR(CURRENT_TIMESTAMP, 'YYYYMM'),'-',TRIM(TO_CHAR(CAST (RIGHT(id, 3) AS INT)+1,'000'))) NEW_ID 
    	FROM pb2_pcm_ord
    	WHERE field2 = #{f2}
    	AND CONCAT(field2,TO_CHAR(CURRENT_TIMESTAMP, 'YYYYMM'),'-') = SUBSTRING(id,1,LENGTH(ID)-3) 
    	ORDER BY id DESC 
    	LIMIT 1
    </select>
    
    <select id="getLastId" parameterType="map" resultType="string">
    	SELECT id 
    	FROM pb2_pcm_ord
    	WHERE id like #{idPrefix}
    	ORDER BY id DESC 
    	LIMIT 1
    </select>
    
    <update id="updateStatus" 
        parameterType="pcmOrdModel"
		flushCache="true">
     UPDATE pb2_pcm_ord 
     SET  
	<if test="status != null">
		WAITING_LEVEL=#{waitingLevel}
	</if>
	<if test="status != null">
		, status=#{status}
	</if>
     WHERE id=#{id}
    </update>
    
	<select id="listWorkflowPath" resultType="map" parameterType="string">    
    (SELECT CONCAT('REVIEWER #',LEVEL) AS LEVEL,TRIM(BOTH ',' FROM REVIEWER_USER) AS U,TRIM(BOTH ',' FROM REVIEWER_GROUP) AS G,LEVEL AS ORDERVAL
	FROM pb2_PCM_ORD_REVIEWER
	WHERE MASTER_ID = #{id})
	ORDER BY ORDERVAL
    </select>
    
</mapper>
